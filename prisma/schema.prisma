generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id        string @id @default(uuid())
    email     string
    provider  Provider
    role      Role
    streams    Stream[]
    upvotes   Upvote[]
  }
model Stream{
    id        string @id @default(uuid())
    type      StreamType
    active    Boolean   @default(true)
    upvotes   Upvote[]
    userId    string
    user      User      @relation(fields:[userId], refefences:[id])
  }

model Upvote{
    id      string   @id @default(uuid())
    userId  string
    streamId  string
    user      User      @relation(fields:[userId], refefences:[id])
    stream    Stream    @relation(fields:[streamId], refefences:[id])
    @@unique([userId, streamId])
  }
enum StreamType{
    Spotify
    Youtube
  }

enum Provider{
    Google
  }

enum Role{
    Streamer
    Enduser
  }
